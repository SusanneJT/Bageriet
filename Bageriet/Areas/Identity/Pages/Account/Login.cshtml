@page
@model LoginModel

@{
    ViewData["Title"] = "Logga in";
}

<h1 class="pt-3">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Lösenord</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            Kom ihåg mig?
                            <input asp-for="Input.RememberMe" />
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" style="background:rgb(67,39,17) linear-gradient(0deg, rgba(67,39,17,1) 0%, rgba(51,41,41,1) 81%);" class="btn btn-primary">Logga in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a style="color: #432711;" id="forgot-password" asp-page="./ForgotPassword">Har du glömt ditt lösenord?</a>
                    </p>
                    <p>
                        <a style="color: #432711;" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrera dig som ny användare</a>
                    </p>
                    <p>
                        <button style="color: #432711;" type="submit" asp-page-handler="SendVerificationEmail">
                            Skicka e-postbekräftelsen igen
                        </button>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
